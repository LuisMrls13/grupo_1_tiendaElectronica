<body>

    <%- include ("../partials/headWeb.ejs")%>

    <% if(leyenda=="Correo ya registrado"){%>
    
        <div class="correoExistente">
            El correo ya esta registrado en la plataforma
        </div>

    <%}%>
    <div class="login-box">
        <img class="ellogo" src="/img/logo1.jpg" alt="Logo">
        <h1>Regístrate</h1>
        <form action="/users/register" method="post">
            <!---- User name ---->

            <label for="username">Nombre de usuario</label>
            <input type="text" placeholder="Usuario" name="username"  id="username">

            <label for="email">Correo electrónico</label>
            <input type="text" placeholder="Correo" name="email"  id="email">

            <!-- Paswsword -->
            <label for="password">Contraseña</label>
            <input type="password" placeholder="Contraseña" name="password"  id="password">

            <input type="submit" value="Regístrate">
            <a href="#">Términos y condiciones</a><br>
            <a href="#">Aviso de privacidad</a>
        </form>
    </div>

</body>




</html>